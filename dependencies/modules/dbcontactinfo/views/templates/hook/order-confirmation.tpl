<div class="dbcontactinfo_confirmation">
    <span class="title">
        <i class="fas fa-info-circle"></i>
        <strong>{l s='¿Ayuda?' mod='dbcontactinfo'}</strong>
        <span>{l s='Estamos aquí para atenderte' mod='dbcontactinfo'}</span>
    </span>
    <span class="element">
        <i class="fas fa-envelope"></i>
        <span class="subdata">
            <span>{l s='Enviar un email' mod='dbcontactinfo'}</span>
            <strong>{$shop.email}</strong>
        </span>
    </span>
    <span class="element">
        <i class="fas fa-phone-alt"></i>
        <span class="subdata">
            <span>{l s='Llamar por teléfono' mod='dbcontactinfo'}</span>
            <strong>{$shop.phone}</strong>
            <span>{$horario}</span>
        </span>
    </span>
</div>
